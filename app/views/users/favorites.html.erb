<div class="row">
  <aside class="col-sm-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <p>読書備忘録：<%= @count_impressions %>冊</p>
        <p>お気に入り：<%= @count_favorites %>件</p>
      </div>
    </div>
        <form action="/books/search" method="POST">
          <div class="form-group">
            <label class="form-label">ISBN(半角数字13桁，－抜き)<input type="text" name="isbn" class="form-control"></label>
            <input type="submit" value="ISBNコードで備忘録を登録" class="form-control btn btn-primary btn-block">
          </div>
        </form>
  </aside>
  <div class="col-sm-9">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link<%= 'active' if current_page?(user_path(@user)) %>">登録読書備忘録</a></li>
      <li class="nav-item"><a href="<%= favorites_user_path(@user) %>" class="nav-link<%= 'active' if current_page?(favorites_user_path(@user)) %>">お気に入り読書備忘録</a></li>
    </ul>
    
    <%= render 'impressions/impressions', impressions: @favorite_impressions %>
  </div>
</div>
