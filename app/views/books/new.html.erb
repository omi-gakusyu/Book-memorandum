<div class="text-center">
  <h1>読書備忘録 登録ページ</h1>
</div>

<div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= form_with(model: @book, url: books_path, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="from-group">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title, class:'form-control' %>
        </div>
          
        <div class="form-group">
          <%= f.label :writer, '作者' %>
          <%= f.text_field :writer, class:'form-control' %>
        </div>
          
        <div class="form-group">
          <%= f.label :isbn, 'ISBN' %>
          <%= f.text_field :isbn, class:'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :image, '表紙画像' %>
          <%= f.file_field :image %>
        </div>
        
          <%= f.fields_for :impressions do |i| %>
            <div class="form-group">
              <%= i.label :star, '評価' %>
              <%= i.select :star,[['☆',1],['☆☆',2],['☆☆☆',3],['☆☆☆☆',4],['☆☆☆☆☆',5]], class: 'form-control' %>
            </div>
              
            <div class="form-group">
              <%= i.label :content, '感想' %>
              <%= i.text_area :content, class: 'form-control', rows: 8 %>
            </div>
            
            <%= i.hidden_field :user_id , value: current_user.id %>
            <%= i.submit '備忘録登録', class: 'btn btn-primary btn-block' %>
          <% end %>
       <% end %>
    </div>
</div>